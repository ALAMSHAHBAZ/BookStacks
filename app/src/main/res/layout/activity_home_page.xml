<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.shahbaz.lenovo.bookstacks.HomePage"
    android:orientation="vertical"
    android:background="@drawable/images">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt"
            android:layout_weight="1"
            android:textColor="#a4cbadf2"
            android:fontFamily="casual"
            android:textStyle="bold|italic"
            android:textSize="28dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:id="@+id/btn"
            android:onClick="logout"
            android:textColor="@color/black"
            android:textStyle="bold"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp">

        <Button
            android:layout_width="180dp"
            android:layout_height="120dp"
            android:drawableTop="@drawable/newbook"
            android:text="BUY NEW BOOKS"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:onClick="buynew"
            android:background="@color/white"/>
        <Button
            android:layout_width="180dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:text="BUY OLD BOOKS"
            android:drawableTop="@drawable/oldbook"
            android:layout_margin="15dp"
            android:onClick="buyold"
            android:background="@color/white"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">

        <Button
            android:id="@+id/button"
            android:layout_width="180dp"
            android:layout_height="120dp"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:layout_weight="1"
            android:background="@color/white"
            android:drawableTop="@drawable/contact"
            android:onClick="contact"
            android:text="CONTACT US" />

        <Button
            android:layout_width="180dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/donate"
            android:onClick="donate"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:text="DONATE BOOKS"
            android:background="@color/white"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RATE US"
        android:onClick="rate"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_weight="1"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SHARE"
        android:onClick="share"
        android:layout_weight="1"
        android:textColor="@color/black"
        android:textStyle="bold"/>



</LinearLayout>
    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="LARGE_BANNER"
        ads:adUnitId="ca-app-pub-9339586260563180/6844395288">
    </com.google.android.gms.ads.AdView>

</LinearLayout>
